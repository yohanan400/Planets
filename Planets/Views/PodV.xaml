<UserControl x:Class="Planets.Views.PodV"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Planets.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid DataContext="{Binding Pods}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
       
            <Image  Source="{Binding Url}" HorizontalAlignment="Left" Height="183" Margin="186,39,0,0" VerticalAlignment="Top" Width="432"/>
            <TextBox Text="{Binding Title}" HorizontalAlignment="Left" Height="23" Margin="186,265,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="268"/>
            <TextBox Text="{Binding Explanation}" HorizontalAlignment="Left" Height="87" Margin="186,293,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="432"/>
            <TextBox Text="{Binding ReleaseDate }" HorizontalAlignment="Left" Height="23" Margin="498,265,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
       
    </Grid>
</UserControl>
