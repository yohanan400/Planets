<UserControl x:Class="Planets.Views.MediaV"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Planets.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBox x:Name="subjectTB" HorizontalAlignment="Left" Height="23" Margin="146,36,0,0" TextWrapping="Wrap" Text="{Binding subject, Mode=TwoWay}" VerticalAlignment="Top" Width="279"/>
        <Button  Content="Button" HorizontalAlignment="Left" Margin="481,34,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <ListBox ItemsSource="{Binding mediaInfos}" HorizontalAlignment="Left" Height="312" Margin="118,107,0,0" VerticalAlignment="Top" Width="544">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <Image Source="{Binding Href}"/>
                        <TextBlock Text="{Binding Title}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

    </Grid>
</UserControl>
